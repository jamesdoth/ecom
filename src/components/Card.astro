---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li
  class="flex flex-col justify-center p-4 bg-white bg-opacity-80 rounded-lg shadow"
>
  <a href={href} class="block text-black">
    <h2 class="text-2xl font-bold mb-2">{title}<span>&rarr;</span></h2>
    <p class="text-gray-700">{body}</p>
  </a>
</li>
