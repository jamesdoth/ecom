---
export interface Navigation {
  label: string;
  href: string;
}
---

<nav>
  <input type="checkbox" id="toggle" class="toggle-checkbox absolute opacity-0 w-0 h-0">
  <label for="toggle" class="toggle-label relative z-10 flex items-center cursor-pointer p-2">
    <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </label>
  <ul class="navList bg-white py-4 px-2 absolute top-10 left-0 w-full mt-10 transform scale-0 origin-top transition-transform duration-300 ease-in-out" x-show="open" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-300" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0">
    <li><a href="/" class="block px-4 py-2 text-gray-800 hover:bg-gray-200">Home</a></li>
    <li><a href="/products" class="block px-4 py-2 text-gray-800 hover:bg-gray-200">Products</a></li>
    <li><a href="/tos" class="block px-4 py-2 text-gray-800 hover:bg-gray-200">Terms of Service</a></li>
  </ul>
</nav>

<style>
  .toggle-checkbox:checked ~ .navList {
    transform: scale(1);
  }
</style>
