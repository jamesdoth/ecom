<header class="flex justify-between items-center bg-slate-400 h-20">
  <nav>
    <Navigation />
  </nav>
  <div class="header-center">
    <a class="btn btn-ghost normal-case text-xl" href="/"
      >PALCEHOLDER TEXT ⚡️</a
    >
  </div>
  <label class="relative bottom-.5 z-10 flex items-center cursor-pointer p-2">
